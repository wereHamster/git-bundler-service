
zero-box()
  margin 0; padding 0

html, body
  zero-box()

body
  font 14px/1.4 "Myriad Pro", "Helvetica Neue", Helvetica, Arial, sans-serif
  color #333
  background url(/texture.png)


a
  color #b90101
  text-decoration none

  &:hover
    text-decoration underline

  &.logo
    position absolute
    top 2px; left 6px
    font-size 18px
    color #111
    z-index 9

    & > span
      font-size 12px


#container
  position relative
  width 500px
  margin 0 auto

#content
  margin-top 20px

p
  margin 1em 0
  color #333

h1
  &#title
    position relative
    margin 20px 0 0
    padding-left: 15px
    font-weight 300
    font-size 40px
    text-align left
    color #222
    border-bottom 1px solid #999

    a
      color #333
      text-decoration none

      &:hover
        text-decoration underline

  #flattr
    position: absolute
    top: -10px; right: 0;

form
  width 480px
  margin 0 auto 10px
  position relative

  &.error
    input
      border: 1px solid #f60

  input
    display inline-block

    width 340px
    padding 6px 10px 8px

    font-size 14px
    font-weight 200
    font-family 'Helvetica Neue', Helvetica

    border 1px solid #ddd
    border-radius 3px

    box-shadow 0 0 2px #ddd inset
    outline none

  button
    padding 6px 10px 8px
    float: right;

    font-size 14px
    font-weight 200
    font-family 'Helvetica Neue', Helvetica

    position relative
    display inline-block
    color #333
    text-shadow 1px 1px 0 #fff
    white-space nowrap
    border none
    overflow visible
    cursor pointer
    border 1px solid #d4d4d4
    -webkit-border-radius 3px
    -moz-border-radius 3px
    border-radius 3px
    background #f4f4f4
    background -webkit-gradient(linear,left top,left bottom,from(#f4f4f4),to(#ececec))
    background -moz-linear-gradient(top,#f4f4f4,#ececec)

    &:hover
      color #fff
      text-decoration none
      text-shadow -1px -1px 0 rgba(0,0,0,0.3)
      border-color #518cc6
      border-bottom-color #2a65a0
      background #599bdc
      background -webkit-gradient(linear,left top,left bottom,from(#599bdc),to(#3072b3))
      background -moz-linear-gradient(top,#599bdc,#3072b3)

#result > #bundle
  border-top: 1px solid #ddd
  margin-top: 5px
  padding-top: 10px

#bundle
  display block
  margin 0 auto 30px
  padding: 0 15px 10px

  #name
    font-size: 16px

    time
      padding: 0 5px
      font-size: 12px

    #links
      padding-top: 5px
      font-size: 12px
      float: right;

      span
        padding: 0 3px

  #source
    font-weight: 100

  .timeago
    padding-top: 1px
    float: right
    font-size: 12px

  #instructions
    margin: 10px auto 0

    h2
      font-size 18px
      font-weight: 300
      text-align: center
      margin: 20px 0 5px
      text-decoration underline

    pre
      zero-box()
      padding: 10px;

      border: 1px solid #CACACA;
      border-radius 3px

      line-height: 1.2em;
      font: 12px Monaco, "Courier New", "DejaVu Sans Mono", "Bitstream Vera Sans Mono", monospace;
      overflow: auto;
      background-clip: padding-box;
      background-color: white;
      color: #393939;

footer
  display: block;
  padding: 0 10px 20px;
  margin: 20px auto 5px;
  color: #777;
  text-shadow: #fff 0 1px 1px;
  overflow: hidden;
  font-size: 12px;
  border-top: 1px solid #ddd;

  > *
    margin-top 5px

  p
    float: left;
    text-align: center;
    font-weight: 200;

  ul
    float: right;

    li
      float: left;
      list-style: none;

      &:first-child
        padding-right: 5px;

      span
        display: inline-block
        padding: 0 3px
